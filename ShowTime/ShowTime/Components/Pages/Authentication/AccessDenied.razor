@page "/access-denied"
@inherits LayoutComponentBase
@inject NavigationManager Navigation
@rendermode InteractiveServer

<style>
    .access-denied-wrapper {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .access-denied-card {
        position: relative;
        max-width: 500px;
        width: 100%;
        background: rgba(26, 10, 56, 0.9);
        border-radius: 20px;
        padding: 3rem 2rem;
        text-align: center;
        border: 2px solid transparent;
        background-clip: padding-box;
        box-shadow: 
            0 0 50px rgba(255, 0, 255, 0.3),
            0 0 100px rgba(0, 255, 255, 0.2),
            inset 0 0 50px rgba(255, 0, 255, 0.1);
        animation: cardPulse 3s ease-in-out infinite alternate;
    }

    .access-denied-card::before {
        content: '';
        position: absolute;
        top: -2px;
        left: -2px;
        right: -2px;
        bottom: -2px;
        background: linear-gradient(45deg, #ff00ff, #00ffff, #ff00ff);
        border-radius: 20px;
        z-index: -1;
        animation: borderRotate 4s linear infinite;
    }

    .access-denied-title {
        font-size: 3rem;
        font-weight: 900;
        color: #ff00ff;
        text-shadow: 
            0 0 20px #ff00ff,
            0 0 40px #ff00ff,
            0 0 60px #ff00ff;
        margin-bottom: 1rem;
        letter-spacing: 4px;
        animation: titleFlicker 2s ease-in-out infinite alternate;
    }

    .access-denied-subtitle {
        font-size: 1.2rem;
        color: #00ffff;
        margin-bottom: 2rem;
        text-shadow: 0 0 10px #00ffff;
        opacity: 0.9;
    }

    .access-denied-icon {
        font-size: 4rem;
        color: #ff3333;
        margin-bottom: 1.5rem;
        text-shadow: 0 0 20px #ff3333;
        animation: iconBounce 2s ease-in-out infinite;
    }

    .access-denied-button {
        position: relative;
        background: linear-gradient(45deg, #ff00ff, #00ffff);
        color: #000;
        border: none;
        padding: 1rem 2rem;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 50px;
        cursor: pointer;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s ease;
        overflow: hidden;
        box-shadow: 
            0 0 20px rgba(255, 0, 255, 0.5),
            0 0 40px rgba(0, 255, 255, 0.3);
    }

    .access-denied-button::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .access-denied-button:hover::before {
        left: 100%;
    }

    .access-denied-button:hover {
        transform: translateY(-2px);
        box-shadow: 
            0 0 30px rgba(255, 0, 255, 0.8),
            0 0 60px rgba(0, 255, 255, 0.5);
    }

    .access-denied-button:active {
        transform: translateY(0);
    }

    .glitch-text {
        position: relative;
        display: inline-block;
    }

    .glitch-text::before,
    .glitch-text::after {
        content: attr(data-text);
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .glitch-text::before {
        animation: glitch1 2s infinite;
        color: #ff00ff;
        z-index: -1;
    }

    .glitch-text::after {
        animation: glitch2 2s infinite;
        color: #00ffff;
        z-index: -2;
    }
</style>

<div class="access-denied-wrapper">
    <div class="access-denied-card">
        <div class="access-denied-icon">ðŸš«</div>
        <h1 class="access-denied-title">
            <span class="glitch-text" data-text="ACCESS DENIED">ACCESS DENIED</span>
        </h1>
        <p class="access-denied-subtitle">You don't have permission to view this page</p>
        
        <button @onclick="GoHome" class="access-denied-button">
            Return Home
        </button>
    </div>
</div>

@code {
    private void GoHome()
    {
        Navigation.NavigateTo("/");
    }
}